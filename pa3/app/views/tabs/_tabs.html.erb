<div class="navbar">
	<% tabs.each do |tab| %>
		<!-- Check if this is the selected tab and render appropriately -->
		<% if tab[:label] != selectedTab %>
			<div class="tab">
				<a class="tabLink" href="<%= tab[:url] %>">
					<span class="leftUnselectedTab"></span>
					<span class="midUnselectedTab"><%= tab[:label] %></span><span class="rightUnselectedTab"></span>
				</a>
			</div>
		<% else %>
			<div class="tab selectedTab">
				<a class="tabLink" href="<%= tab[:url] %>">
					<span class="leftSelectedTab"></span>
					<span class="midSelectedTab"><%= tab[:label] %></span><span class="rightSelectedTab"></span>
				</a>
			</div>
		<% end %>
	<% end %>
</div>